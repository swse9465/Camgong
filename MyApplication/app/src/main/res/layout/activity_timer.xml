<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="false"
    android:layout_centerHorizontal="false"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageButton
        android:id="@+id/btnPause"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:background="@drawable/round_button"
        android:clickable="true"
        android:contentDescription="@string/text_default"
        android:focusable="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/stop" />



    <Chronometer
        android:id="@+id/totalStudy"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="70dp"
        android:format="00:%s"
        android:textColor="@color/textBlack"
        android:textSize="55sp" />

    <Chronometer
        android:id="@+id/noStudy"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:format="00:%s"
        android:textColor="@color/textBlack"
        android:textSize="55sp" />
    <Chronometer
        android:id="@+id/focusStudy"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:format="00:%s"
        android:textColor="@color/textBlack"
        android:textSize="55sp" />
    <com.moyeorak.camgong.timecamera.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        >
<!--        <Chronometer-->
<!--            android:id="@+id/chronometer"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_alignParentTop="true"-->
<!--            android:layout_centerInParent="false"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:layout_marginTop="70dp"-->
<!--            android:format="00:%s"-->
<!--            android:textColor="@color/textBlack"-->
<!--            android:textSize="55sp" />-->


        <com.moyeorak.camgong.timecamera.GraphicOverlay
            android:id="@+id/faceOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.moyeorak.camgong.timecamera.CameraSourcePreview>
    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:format="00:%s"
        android:textColor="@color/white"
        android:background="@color/textBlack"
        android:textSize="50sp" />



</RelativeLayout>



